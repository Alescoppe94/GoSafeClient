<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
            android:id="@+id/relativeLayoutVai"
            android:layout_width="368dp"
            android:layout_height="551dp"
            tools:layout_editor_absoluteY="8dp" tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:id="@+id/linearspinnervai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:gravity="top"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pianoTextViewVai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/seleziona_piano"
                android:textColor="#AAA"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnerVai"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/pianoTextView"
                android:layout_weight="1"
                android:background="@drawable/customborder" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearspinnervai"
            android:layout_marginTop="20dp"
            android:background="@drawable/customborder"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewPianoVai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="matrix" />

            <Button
                    android:id="@+id/avvia_percorso_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Avvia percorso" android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"/>

        </LinearLayout>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>