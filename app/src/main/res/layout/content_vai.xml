<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/titolo"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/vaiLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/relativeLayout"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Tieni Premuto il punto in cui desideri arrivare"
            android:textColor="#FFF"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titolo"
        android:gravity="top">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/linearspinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="top"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pianoTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:text="@string/seleziona_piano"
                    android:textColor="#FFF"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@+id/pianoTextView"
                    android:layout_weight="1"
                    android:background="@drawable/customborder" />
            </LinearLayout>



                <RelativeLayout
                    android:id="@+id/mappaLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/linearspinner">

                    <!--<com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
                android:id="@+id/imageViewPiano"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="matrix" />-->


                    <com.example.alessandro.gosafe.helpers.PinView
                        android:id="@+id/imageViewPiano"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="matrix" />


                    <Button
                        android:id="@+id/partenzabutton"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="center"
                        android:layout_marginBottom="31dp"
                        android:layout_marginEnd="28dp"
                        android:background="@drawable/background_genericbutton2"
                        android:drawableTop="@drawable/ic_vai_icon"
                        android:onClick="avviaPercorso"
                        android:padding="10dp"
                        android:text="Vai"
                        android:textColor="#ffff" />
                </RelativeLayout>



        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>