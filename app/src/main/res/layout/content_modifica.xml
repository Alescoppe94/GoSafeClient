<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.alessandro.gosafe.ModificaActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:id="@+id/linearLayoutTitolo"
            android:gravity="center">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#FFF"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="MODIFICA IL TUO PROFILO" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayoutTitolo"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:id="@+id/linearLayoutNome">

            <LinearLayout
                android:layout_width="121dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left">

                <TextView
                    android:id="@+id/nomeLabel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:textSize="25dp"
                    android:textColor="#FFF"
                    android:text="Nome"
                    android:textStyle="bold"/>
            </LinearLayout>
    <LinearLayout
            android:layout_width="210dp"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/modificaNomeText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:background="@drawable/username_input"
                android:textSize="20dp"
                android:paddingLeft="15dp"
                android:hint="Homer" />
        </LinearLayout>
        </LinearLayout>

        <!--Secondo Layout: Cognome -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayoutNome"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:id="@+id/linearLayoutCognome">

            <LinearLayout
                android:layout_width="121dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                >

                <TextView
                    android:id="@+id/cognomeLabel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textSize="20dp"
                    android:textColor="#FFF"
                    android:paddingLeft="10dp"
                    android:text="Cognome"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="210dp"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/modificaCognomeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingLeft="15dp"
                    android:background="@drawable/username_input"
                    android:textSize="20dp"
                    android:hint="Simpson" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/linearLayoutCognome"
            android:id="@+id/linearLayoutUsername"
            android:layout_marginTop="25dp"
            android:layout_alignParentStart="true"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="121dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                >

                <TextView
                    android:id="@+id/usernameLabel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:textColor="#FFF"
                    android:paddingLeft="10dp"
                    android:text="Username"
                    android:gravity="center_vertical"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="210dp"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/modificaUsernameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/username_input"
                    android:ems="10"
                    android:hint="ciambella"
                    android:paddingLeft="15dp"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/linearLayoutUsername"
            android:id="@+id/linearLayoutPassword"
            android:layout_marginTop="25dp"
            android:layout_alignParentStart="true"
            android:orientation="horizontal">
        <LinearLayout
            android:layout_width="121dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            >

            <TextView
                android:id="@+id/passwordLabel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="16dp"
                android:text="Vecchia Password"
                android:paddingLeft="10dp"
                android:textColor="#FFF"
                android:gravity="center_vertical"
                android:textStyle="bold"/>
        </LinearLayout>

            <LinearLayout
                android:layout_width="210dp"
                android:layout_height="match_parent">


                <EditText
                    android:id="@+id/passwordText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:background="@drawable/password_input"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPassword" />
            </LinearLayout>
        </LinearLayout>

        <!-- Sesto LinearLayout: Nuova Password -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/linearLayoutPassword"
            android:id="@+id/linearLayoutConfermaPassword"
            android:layout_marginTop="25dp"
            android:layout_alignParentStart="true"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="121dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                >

                <TextView
                    android:id="@+id/confermaPasswordLabel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:text="Nuova Password"
                    android:textColor="#FFF"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="210dp"
                android:layout_height="match_parent">


                <EditText
                    android:id="@+id/confermaPasswordText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/password_input"
                    android:layout_weight="1"
                    android:paddingLeft="15dp"
                    android:ems="10"
                    android:inputType="textPassword" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/linearLayoutConfermaPassword"
            android:id="@+id/linearLayoutModificaButton"
            android:layout_marginTop="50dp"
            android:layout_alignParentStart="true"
            android:orientation="horizontal"
            android:gravity="left"
            >

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:gravity="center">
                <Button
                    android:id="@+id/annullaButton"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:background="@drawable/genericbuttonradius"
                    android:textSize="10dp"
                    android:text="Annulla Modifica"
                    android:onClick="annullamodifica"
                    android:textColor="#FFF"
                    android:gravity="center"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:gravity="center">
                <Button
                    android:id="@+id/modificaButton"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:background="@drawable/genericbuttonradius"
                    android:textSize="10dp"
                    android:text="Conferma Modifica"
                    android:textColor="#FFF"
                    android:gravity="center"
                    android:onClick="confermaModifica"
                    />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>